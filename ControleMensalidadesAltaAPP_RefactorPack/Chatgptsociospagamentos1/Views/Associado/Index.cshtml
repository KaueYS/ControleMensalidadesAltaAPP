@{ ViewData["Title"] = "Lista de Sócios"; }
<div class="container mt-4">
    <h2 class="text-center mb-4">Lista de Sócios</h2>
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <a href="@Url.Action("Create", "Associado")" class="btn btn-primary">➕ Novo Sócio</a>
        @if (TempData["Msg"] != null) { <p class="text-success fw-bold mb-0">@TempData["Msg"]</p> }
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>Vencimento</th>
                    <th>Dias Restantes</th>
                    <th colspan="3">Ações</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@item.ObterVencimentoAtual()?.ToString("dd/MM/yyyy")</td>
                        <td>@item.DiasRestantes()</td>
                        <td><a asp-controller="Pagamento" asp-action="Pagamento" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success w-100 mb-1">💰 Novo Pagamento</a></td>
                        <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary w-100 mb-1">📜 Histórico</a></td>
                        <td class="d-flex flex-column flex-md-row gap-2 justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑 Deletar</a>
                            <a asp-action="DetalhesAssociado" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">👤 Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
