@model IEnumerable<PagamentoModel>



@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">

    <h2 class="text-center mb-4">📑 Lista de Pagamentos</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Socio)</th>
                    <th>@Html.DisplayNameFor(model => model.DataPagamento)</th>
                    <th>@Html.DisplayNameFor(model => model.DiasAdimplencia)</th>
                    <th>@Html.DisplayNameFor(model => model.Valor)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Socio.Nome)</td>
                        <td>@item.DataPagamento.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.DiasAdimplencia > 15)
                            {
                                <span class="badge bg-success">@item.DiasAdimplencia dias</span>
                            }
                            else if (item.DiasAdimplencia > 5)
                            {
                                <span class="badge bg-warning text-dark">@item.DiasAdimplencia dias</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@item.DiasAdimplencia dias</span>
                            }
                        </td>
                        <td>R$ @item.Valor.ToString("N2")</td>
                        <td class="d-flex flex-column flex-md-row gap-2 justify-content-center">
                            @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Editar</a> *@
                            @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">🔎 Detalhes</a> *@
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑 Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


