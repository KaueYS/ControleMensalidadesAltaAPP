<table class="table">
    <thead>
        <tr>
            <th>Nome do Associado</th>
            <th>Valor</th>
            <th>Data de Pagamento</th>
           
            <th>Dias pagos</th>
            <th>Pago até o dia</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pagamento in Model)
        {
            <tr>
                <td>@pagamento.Associado.Nome</td>
                <td>@pagamento.Valor.ToString("C")</td>
                <td>@pagamento.DataPagamento.ToString("dd/MM/yyyy")</td>

                <td>@pagamento.ParcelasPagas</td>
                <td>@pagamento.MesAdimplente.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (pagamento.MesAdimplente < DateTime.Now)
                    {
                        <span class="text-danger">Atrasado</span>
                    }
                    else
                    {
                        <span class="text-success">Em dia</span>
                    }
                   
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@pagamento.PagamentoId">Editar</a> | *@
                    <a asp-action="Details" asp-route-id="@pagamento.PagamentoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@pagamento.PagamentoId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

