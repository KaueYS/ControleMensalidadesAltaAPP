    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Socio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Socio.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPagamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiasAdimplencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiasAdimplencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
