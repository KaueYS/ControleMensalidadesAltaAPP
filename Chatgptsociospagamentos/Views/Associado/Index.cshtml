@model IEnumerable<Chatgptsociospagamentos.Models.AssociadoModel>

@{
    ViewData["Title"] = "Lista de Sócios";
    var ass = ViewBag.associadoPgto as PagamentoModel;
}

<h2>Lista de Sócios</h2>
<p>
    <a href="@Url.Action("Create", "Associado")" class="btn btn-primary">Novo Sócio</a>
</p>

@if (TempData["Msg"] != null)
{
    <p style="color:green;">@TempData["Msg"]</p>
}



<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            
            <th>
                Vencimento
            </th>
            <th>
                Dias restantes
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                
                <td>
                    @item.ObterVencimentoAtual()?.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.DiasRestantes()
                </td>
                <td>
                    <a asp-controller="Pagamento" asp-action="Pagamento" asp-route-id="@item.Id" class="btn btn-outline-primary">Novo Pagamento</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Historico de pagamentos</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a> |

                    <a asp-action="DetalhesAssociado" asp-route-id="@item.Id">Dados do Socio</a>
                </td>
            </tr>
        }
    </tbody>
</table>
